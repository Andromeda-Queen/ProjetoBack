<h2>Cadastrar Projeto</h2>
<form action="{{#if projeto}}/projetoUpdate{{else}}/projetoCreate{{/if}}" method="post">
    {{#if projeto}}
      <input type="hidden" name="id" value="{{projeto.id}}">
    {{/if}}

    <div class="form-group">
        <label for="inputNome">Nome</label>
        <input type="text" class="form-control" id="inputNome" name="nome" value="{{projeto.nome}}">
    </div>

    <div class="form-group">
        <label for="inputLinkExterno">Link externo</label>
        <input type="text" class="form-control" id="inputLinkExterno" name="linkExterno" value="{{projeto.linkExterno}}">
    </div>

    <div class="form-group">
        <label for="inputResumo">Resumo</label>
        <input type="text" class="form-control" id="inputResumo" name="resumo" value="{{projeto.resumo}}">
    </div>

    <label>Palavrasâ€‘chave:</label>
    <div>
      {{#each palavraChave}}
        <div class="form-check form-check-inline align-items-center">
          <input class="form-check-input"
                 type="checkbox"
                 name="palavrasChave[]"
                 id="palavraChave-{{id}}"
                 value="{{id}}"
                 {{#if selected}}checked{{/if}}>
          <label class="form-check-label me-2" for="palavraChave-{{id}}">{{palavraChave}}</label>
        </div>
      {{/each}}
    </div>
    <br>
    <div class="d-flex align-items-center justify-content-between">
      <button type="submit" class="btn btn-primary">Salvar</button>
      {{#if projeto}}
        <a href="/projetoUsuarioCreate/{{projeto.id}}" class="btn btn-outline-success btn-sm" title="Gerenciar membros deste projeto">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="8.5" cy="7" r="4"></circle>
            <line x1="20" y1="8" x2="20" y2="14"></line>
            <line x1="23" y1="11" x2="17" y2="11"></line>
          </svg>
          Gerenciar Membros
        </a>
      {{/if}}
    </div>
</form>
