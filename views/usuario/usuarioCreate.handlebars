<form action="/usuarioCreate" method="post">
    <div class="form-group">
        <label for="inputLogin">Login</label>
        <input type="text" class="form-control" id="inputLogin" name="login">
    </div>
    <div class="form-group">
        <label for="inputSenha">Senha</label>
        <input type="text" class="form-control" id="inputSenha" name="senha">
    </div>
    <div class="form-group">
        <label for="inputTipo">Tipo</label>
        <input type="number" class="form-control" id="inputTipo" name="tipo">
    </div>
    <div class="form-group">
    <label for="inputConhecimentos">Conhecimentos</label>

    {{#each conhecimentos}}
        <div class="form-check form-check-inline align-items-center">
        <input class="form-check-input"
                type="checkbox"
                name="conhecimentos[]"
                id="conhecimento-{{id}}"
                value="{{id}}">
        <label class="form-check-label me-2" for="conhecimento-{{id}}">{{conhecimento}}</label>

        <!-- campo de escala sempre presente (sem disabled) -->
        <input type="number"
                class="form-control"
                style="width:80px;"
                name="escala[{{id}}]"
                id="escala-{{id}}"
                min="0" max="10"
                value="0">
        </div>
    {{/each}}
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>